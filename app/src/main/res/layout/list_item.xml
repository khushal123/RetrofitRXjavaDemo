<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="response"
            type="demo.khushal.com.retrofitrxjava.beans.GitHubResponse"/>
    </data>
    <android.support.constraint.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repoName"
            android:text="@{response.name}"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/url"
            android:text="@{response.html_url}"
            app:layout_constraintTop_toTopOf="@+id/repoName"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createdAt"
            android:text="@{response.created_at}"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/url"
            />
    </android.support.constraint.ConstraintLayout>

</layout>